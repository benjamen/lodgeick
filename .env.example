# Environment Configuration
# Copy this file to .env and fill in the actual values

# OAuth Credentials - Xero
XERO_CLIENT_ID=your_xero_client_id_here
XERO_CLIENT_SECRET=your_xero_client_secret_here

# OAuth Credentials - Google
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# OAuth Credentials - HubSpot
HUBSPOT_CLIENT_ID=your_hubspot_client_id_here
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret_here

# OAuth Credentials - Slack
SLACK_CLIENT_ID=your_slack_client_id_here
SLACK_CLIENT_SECRET=your_slack_client_secret_here

# n8n Configuration (optional)
N8N_API_URL=http://localhost:5678/api/v1
N8N_API_KEY=your_n8n_api_key_here

# Site URL (for OAuth redirects)
# Local: http://lodgeick.com:8000
# Production: https://lodgeick.com
SITE_URL=http://lodgeick.com:8000
